<div class="jumbotron">
  <div class="well well-sm">
    <h2>Average Age: <small><%= @average_age %></small></h2>
  </div>
  <% [:department, :city, :state, :year].each do |grouping| %>
  <div class="well well-sm">
    <table class="table">
      <% grouping_data = eval("@robots_by_#{grouping}") %>
      <tr>
        <th class="col-md-3"><%= grouping.capitalize %></th>
        <th class="col-md-9">Robot Count</th>
      </tr>
      <% grouping_data.each do |grouping_value, count| %>
      <tr>
        <td><%= grouping_value %></td>
        <td><%= count %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% end %>
</div>
