<div class="jumbotron">
  <div class="row">
    <div class='well col-md-8'>
      <h2>Name: <small><%= @robot.name %></small></h2>
      <h2>City: <small><%= @robot.city %></small></h2>
      <h2>State: <small><%= @robot.state %></small></h2>
      <h2>Birthday: <small><%= @robot.birthday %></small></h2>
      <h2>Hire Date: <small><%= @robot.hire_date %></small></h2>
      <h2>Department: <small><%= @robot.department %></small></h2>
    </div>

    <div class='col-md-4'>
      <img src="https://robohash.org/<%= @robot.avatar_id %>" alt="<%= @robot.name %>" class='center-block'>
    </div>
  </div>
  <div class="row">
    <div class="row">
      <form class="col-md-8" action="/robots/<%= @robot.id %>/edit" method="get">
        <input class="btn btn-warning" type="submit" name="delete" value="I made a mistake and must correct it"/>
      </form>
      <form class="col-md-4" action="/robots/<%= @robot.id %>" method="post">
        <input type="hidden" name="_method" value="delete"/>
        <input class="btn btn-danger" type="submit" name="delete" value="DESTROY MY HARD DRIVE"/>
      </form>
    </div>
  </div>
</div>
